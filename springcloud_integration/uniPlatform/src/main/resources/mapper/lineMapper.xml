<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yt.uniPlatform.mapper.LineMapper">
	<resultMap type="com.yt.uniPlatform.dataObject.LineDO"
		id="lineResultMap">
		<id property="id" column="id" />
		<result property="lineNo" column="line_no" />
		<result property="lineName" column="line_name" />
		<result property="transferCenterSet"
			column="transfer_center_set" />
		<result property="startOrgCode" column="start_org_code" />
		<result property="startOrgName" column="start_org_name" />
		<result property="endOrgCode" column="end_org_code" />
		<result property="endOrgName" column="end_org_name" />
		<result property="lineFreguencyNo" column="line_frequency_no" />
		<result property="lineFrequencyName"
			column="line_frequency_name" />
		<result property="startTime" column="start_time" />
		<result property="endTime" column="end_time" />
		<result property="status" column="status" />
		<result property="daySpan" column="day_span" />
		<result property="fullTakeTime" column="full_take_time" />
		<result property="fullDistance" column="full_distance" />
		<result property="lineProperty" column="line_property" />
		<result property="transType" column="trans_type" />
		<result property="lineStatus" column="line_status" />
		<result property="freStatus" column="fre_status" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="lineType" column="line_type" />
		<result property="unlockTime" column="unlock_time" />
		<result property="lockTime" column="lock_time" />
		<result property="reason" column="reason" />
	</resultMap>

	<select id="queryLineListByCondition"
		parameterType="com.yt.uniPlatform.dataObject.LineDO"
		resultMap="lineResultMap">
		select * from line
		<where>
			<if test="line.lineName != null and line.lineName !='' ">
				and line_name like concat('%', #{line.lineName}, '%')
			</if>
			<if test="line.lineNo != null and line.lineNo !=''">
				and line_no = #{line.lineNo}
			</if>
			<if test="line.lineStatus != null and line.lineStatus !=''">
				and line_status = #{line.lineStatus}
			</if>
			<if test="line.lineProperty != null and line.lineProperty !=''">
				and line_property = #{line.lineProperty}
			</if>
			<if test="line.transType != null and line.transType !=''">
				and trans_type = #{line.transType}
			</if>
		</where>
	</select>

	<select id="queryLineById" resultMap="lineResultMap">
		select * from line where id
		= #{id}
	</select>
</mapper>			